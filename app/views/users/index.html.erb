<h1>Listing users</h1>

<p>These are all users.</p>

<table class="list">
	<colgroup>
		<col style="width:10%;" />
		<col style="width:66%;" />
		<col style="width:8%;" />
		<col style="width:8%;" />
		<col style="width:8%;" />
	</colgroup>
	<tr>
		<th>ID</th>
		<th>Email</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
	</tr>

<% for user in @users %>
  <tr class="itemRow<%= cycle(' oddRow', '') %>">
	<td><%=h user.id %></td>
    <td><%=h user.email %></td>
    <td style="text-align:center"><%= link_to 'Show', user %></td>
    <td style="text-align:center"><%= link_to 'Edit', edit_user_path(user) %></td>
    <td style="text-align:center"><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

